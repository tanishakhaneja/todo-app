<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Todo List App</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="container">
    <h1>Todo List</h1>

    <% if (alert) { %>
      <div id="alertBox" class="alert">
        <span><%= alert %></span>
        <button class="close-btn" onclick="this.parentElement.style.display='none'">&times;</button>
      </div>
    <% } %>

    <form action="/tasks" method="POST" class="add-task-form">
      <input type="text" name="title" placeholder="Add new task..." required />
      <select name="priority">
        <option value="low">Low Priority</option>
        <option value="high">High Priority</option>
        <option value="urgent">Urgent</option>
      </select>
      <button type="submit" class="btn primary-btn">
        <i class="fa fa-plus"></i> Add Task
      </button>
    </form>

    <ul class="task-list">
      <% tasks.forEach(task => { %>
        <li class="task-item <%= task.priority %>">
          <form action="/tasks/<%= task._id %>?_method=PUT" method="POST" class="edit-form">
            <input type="text" name="title" value="<%= task.title %>" readonly />
            <select name="priority" disabled>
              <option value="low" <%= task.priority === 'low' ? 'selected' : '' %>>Low</option>
              <option value="high" <%= task.priority === 'high' ? 'selected' : '' %>>High</option>
              <option value="urgent" <%= task.priority === 'urgent' ? 'selected' : '' %>>Urgent</option>
            </select>
            <button type="button" class="btn edit-btn" title="Edit Task">
              <i class="fa fa-pencil"></i>
            </button>
            <button type="submit" class="btn save-btn d-none" title="Save Task">
              <i class="fa fa-check"></i>
            </button>
          </form>

          <form id="deleteForm-<%= task._id %>" action="/tasks/<%= task._id %>?_method=DELETE" method="POST" class="delete-form">
            <button type="button" class="btn delete-btn" onclick="confirmDelete('deleteForm-<%= task._id %>')">
              <i class="fa fa-trash"></i>
            </button>
          </form>
        </li>
      <% }); %>
    </ul>
    <footer class="footer">
      <p>Â© <%= new Date().getFullYear() %> Tanisha Khaneja</p>
    </footer>
  </div>
  <script>
    // Handle Edit/Save toggle
    document.querySelectorAll('.edit-form').forEach(form => {
      const editBtn = form.querySelector('.edit-btn');
      const saveBtn = form.querySelector('.save-btn');
      const input = form.querySelector('input[name="title"]');
      const select = form.querySelector('select[name="priority"]');

      editBtn.addEventListener('click', () => {
        input.removeAttribute('readonly');
        select.removeAttribute('disabled');
        editBtn.classList.add('d-none');
        saveBtn.classList.remove('d-none');
        input.focus();
      });
    });

    function confirmDelete(formId) {
      if (confirm("Are you sure you want to delete this task?")) {
        document.getElementById(formId).submit();
      }
    }
  </script>

  <style>
    .btn {
  background-color: #007bff;
  color: white;               
  border: none;
  cursor: pointer;
  font-size: 1.2rem;
  margin-left: 5px;
  padding: 5px 10px;
  border-radius: 6px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.3s ease;
}

.btn:hover {
  background-color: #b30000;
}

.d-none {
  display: none;
}

input[readonly], select:disabled {
  background-color: #f5f5f5;
  border: none;
  color: #555;
}

  </style>
</body>
</html>
