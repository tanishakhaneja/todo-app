<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo List</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Todo List</h1>
    <% if (alert) { %>
      <div class="alert"><%= alert %></div>
    <% } %>
    <form action="/tasks" method="POST" class="add-task-form">
      <input type="text" name="title" placeholder="Add new task..." required>
      <select name="priority">
        <option value="low">Low</option>
        <option value="high">High</option>
        <option value="urgent">Urgent</option>
      </select>
      <button type="submit">Add</button>
    </form>
    <ul>
      <% tasks.forEach(task => { %>
        <li>
          <form action="/tasks/<%= task._id %>?_method=PUT" method="POST" class="edit-task-form">
            <input type="text" name="title" value="<%= task.title %>" placeholder="Edit task..." required>
            <select name="priority" aria-label="Task priority">
              <option value="low"<% if (task.priority === 'low') { %> selected<% } %>>Low</option>
              <option value="high"<% if (task.priority === 'high') { %> selected<% } %>>High</option>
              <option value="urgent"<% if (task.priority === 'urgent') { %> selected<% } %>>Urgent</option>
            </select>
            <button type="submit">Save</button>
          </form>
          <form action="/tasks/<%= task._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
    <footer>
      <p>Â© <%= new Date().getFullYear() %> Tanisha Khaneja</p>
    </footer>
  </div>
</body>
</html>

